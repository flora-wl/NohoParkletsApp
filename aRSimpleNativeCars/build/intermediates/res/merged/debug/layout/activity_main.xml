<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background4"
    tools:context="MainActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NohoParklets"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageButton"
        android:src="@drawable/logo"
        android:layout_marginTop="68dp"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true" />


    <View
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:background="@android:color/white"
        android:id="@+id/view1"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/notificationsmenu"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width = "52dp"
        android:layout_height= "52dp"
        android:src="@drawable/parkletmenu"
        android:id="@+id/parkletmenu"
        android:layout_alignTop="@+id/infomenu"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width = "50dp"
        android:layout_height= "50dp"
        android:src="@drawable/infomenu"
        android:id="@+id/infomenu"
        android:layout_alignBottom="@+id/mapmenu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width = "50dp"
        android:layout_height= "50dp"
        android:src = "@drawable/notificationsmenu"
        android:id="@+id/notificationsmenu"
        android:layout_marginBottom="93dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton" />

    <ImageView
        android:layout_width = "52dp"
        android:layout_height= "52dp"
        android:src="@drawable/mapmenu"
        android:id="@+id/mapmenu"
        android:layout_below="@+id/view1"
        android:layout_alignRight="@+id/imageButton"
        android:layout_alignEnd="@+id/imageButton" />

    <View
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:background="@android:color/white"
        android:id="@+id/view2"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/parkletmenu"
        android:layout_alignLeft="@+id/view1"
        android:layout_alignStart="@+id/view1" />


</RelativeLayout>